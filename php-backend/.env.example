APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Session Configuration
# Generate a secure random string (64+ characters)
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Razorpay Configuration
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# DTDC Courier Configuration (Shipsy API)
# Contact DTDC/Shipsy for API credentials
DTDC_BASE_URL=https://app.shipsy.in
DTDC_API_KEY=your_dtdc_api_key
DTDC_USERNAME=your_dtdc_username
DTDC_PASSWORD=your_dtdc_password

# Firebase Configuration
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT=config/firebase-service-account.json
