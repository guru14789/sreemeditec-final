{
    "name": "sreemeditec/php-mongodb-backend",
    "description": "Full-stack PHP backend with MongoDB for Sree Meditec company website",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9",
        "firebase/php-jwt": "^6.10",
        "ramsey/uuid": "^4.7",
        "kreait/firebase-php": "^7.22",
        "razorpay/razorpay": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Controllers\\": "controllers/",
            "Models\\": "models/",
            "Config\\": "config/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:5000 -t public/",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}
